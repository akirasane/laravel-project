# Development Environment Configuration
APP_NAME="Order Management System (Dev)"
APP_ENV=local
APP_KEY=base64:generated_key_here
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Database Configuration (Development)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=order_management_dev
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root_password

# Redis Configuration (Development)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=order_mgmt_dev

# Session Configuration (Development)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_SECURE_COOKIE=false

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Broadcasting Configuration
BROADCAST_CONNECTION=pusher
BROADCAST_DRIVER=pusher

# WebSocket Configuration (Development)
PUSHER_APP_ID=local
PUSHER_APP_KEY=local
PUSHER_APP_SECRET=local
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

# Mail Configuration (Development - Log driver)
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="dev@orderms.local"
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration (Development)
LOG_CHANNEL=stack
LOG_STACK=single,security,audit
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_DAILY_DAYS=30
SECURITY_LOG_RETENTION_DAYS=90

# Platform API Configuration - Shopee (Sandbox)
SHOPEE_API_URL=https://partner.test-stable.shopeemobile.com
SHOPEE_PARTNER_ID=dev_partner_id
SHOPEE_PARTNER_KEY=dev_partner_key
SHOPEE_SHOP_ID=dev_shop_id
SHOPEE_ACCESS_TOKEN=dev_access_token
SHOPEE_REFRESH_TOKEN=dev_refresh_token

# Platform API Configuration - Lazada (Sandbox)
LAZADA_API_URL=https://api.lazada.com/rest
LAZADA_APP_KEY=dev_app_key
LAZADA_APP_SECRET=dev_app_secret
LAZADA_ACCESS_TOKEN=dev_access_token
LAZADA_REFRESH_TOKEN=dev_refresh_token
LAZADA_SELLER_ID=dev_seller_id

# Platform API Configuration - Shopify (Development Store)
SHOPIFY_API_URL=https://your-dev-store.myshopify.com
SHOPIFY_API_KEY=dev_api_key
SHOPIFY_API_SECRET=dev_api_secret
SHOPIFY_ACCESS_TOKEN=dev_access_token
SHOPIFY_SHOP_DOMAIN=your-dev-store.myshopify.com

# Platform API Configuration - TikTok Shop (Sandbox)
TIKTOK_API_URL=https://open-api.tiktokglobalshop.com
TIKTOK_APP_KEY=dev_app_key
TIKTOK_APP_SECRET=dev_app_secret
TIKTOK_ACCESS_TOKEN=dev_access_token
TIKTOK_REFRESH_TOKEN=dev_refresh_token
TIKTOK_SHOP_ID=dev_shop_id

# POS Integration Configuration (Development)
POS_API_URL=https://dev-pos-api.example.com
POS_API_KEY=dev_pos_key
POS_API_SECRET=dev_pos_secret
POS_TIMEOUT=30

# Security Configuration (Development)
BCRYPT_ROUNDS=10
HASH_VERIFY=true

# Security Headers (Development)
SECURITY_HSTS_ENABLED=false
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_HSTS_INCLUDE_SUBDOMAINS=false
SECURITY_HSTS_PRELOAD=false
SECURITY_CSP_ENABLED=true
SECURITY_CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' ws: wss:; frame-ancestors 'none';"
SECURITY_FRAME_OPTIONS=DENY
SECURITY_CONTENT_TYPE_OPTIONS=nosniff
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_PERMISSIONS_POLICY="geolocation=(), microphone=(), camera=()"

# CORS Configuration (Development)
SECURITY_CORS_ALLOWED_ORIGINS="http://localhost,http://127.0.0.1"
SECURITY_CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
SECURITY_CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With,X-CSRF-TOKEN"
SECURITY_CORS_EXPOSED_HEADERS=""
SECURITY_CORS_MAX_AGE=86400
SECURITY_CORS_SUPPORTS_CREDENTIALS=false

# Input Validation (Development)
SECURITY_MAX_INPUT_VARS=1000
SECURITY_MAX_FILE_SIZE=10240
SECURITY_ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx"
SECURITY_SANITIZE_HTML=true

# Rate Limiting (Development)
SECURITY_API_RATE_LIMIT=120
SECURITY_API_RATE_DECAY=1
SECURITY_AUTH_RATE_LIMIT=10
SECURITY_AUTH_RATE_DECAY=15
SECURITY_PASSWORD_RESET_RATE_LIMIT=5
SECURITY_PASSWORD_RESET_RATE_DECAY=60

# Encryption (Development)
SECURITY_ENCRYPTION_KEY="${APP_KEY}"
SECURITY_ENCRYPTION_CIPHER=AES-256-CBC

# Session Security (Development)
SECURITY_SESSION_REGENERATE_ON_LOGIN=true
SECURITY_SESSION_INVALIDATE_ON_PASSWORD_CHANGE=true
SECURITY_CONCURRENT_SESSIONS=3
SECURITY_SESSION_IDLE_TIMEOUT=3600

# Password Policy (Development)
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_PASSWORD_REQUIRE_UPPERCASE=true
SECURITY_PASSWORD_REQUIRE_LOWERCASE=true
SECURITY_PASSWORD_REQUIRE_NUMBERS=true
SECURITY_PASSWORD_REQUIRE_SYMBOLS=false
SECURITY_PASSWORD_PREVENT_COMMON=true
SECURITY_PASSWORD_PREVENT_PERSONAL=true
SECURITY_PASSWORD_HISTORY_COUNT=3
SECURITY_PASSWORD_EXPIRY_DAYS=0

# Account Lockout (Development)
SECURITY_ACCOUNT_LOCKOUT_ENABLED=true
SECURITY_ACCOUNT_LOCKOUT_MAX_ATTEMPTS=10
SECURITY_ACCOUNT_LOCKOUT_DURATION=300
SECURITY_ACCOUNT_LOCKOUT_PROGRESSIVE=false

# Audit Trail (Development)
SECURITY_AUDIT_ENABLED=true
SECURITY_AUDIT_LOG_CHANNEL=audit
SECURITY_AUDIT_AUTH=true
SECURITY_AUDIT_AUTHZ=true
SECURITY_AUDIT_DATA_CHANGES=true
SECURITY_AUDIT_ADMIN_ACTIONS=true
SECURITY_AUDIT_API_CALLS=true
SECURITY_AUDIT_RETENTION_DAYS=90

# Order Processing Configuration (Development)
ORDER_SYNC_INTERVAL=60
ORDER_BATCH_SIZE=50
ORDER_RETRY_ATTEMPTS=3
ORDER_TIMEOUT=30

# Development Tools
DEBUGBAR_ENABLED=true
CLOCKWORK_ENABLED=true
TELESCOPE_ENABLED=true

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"