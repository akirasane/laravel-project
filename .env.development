# Development Environment Configuration
APP_NAME="Order Management System (Dev)"
APP_ENV=local
APP_KEY=base64:generated_key_here
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Database Configuration (Development)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=order_management_dev
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root_password

# Redis Configuration (Development)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=order_mgmt_dev

# Session Configuration (Development)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_SECURE_COOKIE=false

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Broadcasting Configuration
BROADCAST_CONNECTION=pusher
BROADCAST_DRIVER=pusher

# WebSocket Configuration (Development)
PUSHER_APP_ID=local
PUSHER_APP_KEY=local
PUSHER_APP_SECRET=local
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

# Mail Configuration (Development - Log driver)
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="dev@orderms.local"
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration (Development)
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Platform API Configuration - Shopee (Sandbox)
SHOPEE_API_URL=https://partner.test-stable.shopeemobile.com
SHOPEE_PARTNER_ID=dev_partner_id
SHOPEE_PARTNER_KEY=dev_partner_key
SHOPEE_SHOP_ID=dev_shop_id
SHOPEE_ACCESS_TOKEN=dev_access_token
SHOPEE_REFRESH_TOKEN=dev_refresh_token

# Platform API Configuration - Lazada (Sandbox)
LAZADA_API_URL=https://api.lazada.com/rest
LAZADA_APP_KEY=dev_app_key
LAZADA_APP_SECRET=dev_app_secret
LAZADA_ACCESS_TOKEN=dev_access_token
LAZADA_REFRESH_TOKEN=dev_refresh_token
LAZADA_SELLER_ID=dev_seller_id

# Platform API Configuration - Shopify (Development Store)
SHOPIFY_API_URL=https://your-dev-store.myshopify.com
SHOPIFY_API_KEY=dev_api_key
SHOPIFY_API_SECRET=dev_api_secret
SHOPIFY_ACCESS_TOKEN=dev_access_token
SHOPIFY_SHOP_DOMAIN=your-dev-store.myshopify.com

# Platform API Configuration - TikTok Shop (Sandbox)
TIKTOK_API_URL=https://open-api.tiktokglobalshop.com
TIKTOK_APP_KEY=dev_app_key
TIKTOK_APP_SECRET=dev_app_secret
TIKTOK_ACCESS_TOKEN=dev_access_token
TIKTOK_REFRESH_TOKEN=dev_refresh_token
TIKTOK_SHOP_ID=dev_shop_id

# POS Integration Configuration (Development)
POS_API_URL=https://dev-pos-api.example.com
POS_API_KEY=dev_pos_key
POS_API_SECRET=dev_pos_secret
POS_TIMEOUT=30

# Security Configuration (Development)
BCRYPT_ROUNDS=10
HASH_VERIFY=true

# Order Processing Configuration (Development)
ORDER_SYNC_INTERVAL=60
ORDER_BATCH_SIZE=50
ORDER_RETRY_ATTEMPTS=3
ORDER_TIMEOUT=30

# Development Tools
DEBUGBAR_ENABLED=true
CLOCKWORK_ENABLED=true
TELESCOPE_ENABLED=true

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"